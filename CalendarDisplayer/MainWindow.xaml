<Window x:Class="CalendarDisplayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalendarDisplayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Name="cmdShowFiles" Content="Show saved Files" Click="cmdShowFiles_Click"/>
            <Button Name="cmdShowAsList" Content="Show as List" Click="cmdShowAsList_Click"/>
            <Button Name="cmdShowAsCalendar" Content="Show as calendar" Click="cmdShowAsCalendar_Click"/>
        </StackPanel>
        <Grid Name="CalendarResultsContainer">
            
        </Grid>
    </StackPanel>
</Window>
